extends layout.pug

block content
  nav.nav
    a(href='/')
      span &larr;
      |  Back
  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box
        h1= project.project_name
        p #{project.description}
        
      .project-tech-links-box.box
        h6 Technologies
        ul
          each technology in project.technologies
            li #{technology}

        a.btn-link(href='') Live Demo
        a.btn-link(href=`${project.github_link}`, target= "_blank") GitHub Repo

    .project-img-box.box
      each image in project.image_urls
        img.project-img(src=`${image[0]}`, alt=`${image[1]}`)
      
    nav.nav
      a(href='/')
        span &larr;
        |  Back
